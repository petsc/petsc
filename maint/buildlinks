#! /bin/csh
#
# Builds PETSc shadow directory.  This is used in conjunction with addlinks.
#

set shadowdir=$1
set petscdir=/home/bsmith/petsc

cd $petscdir
#
#  remove all garabage from true petsc directory
#
# make ACTION=clean tree >>& /dev/null
#
find . \(  -name man -prune -o -name www -prune \) \
        -o -type d -exec $petscdir/maint/addlinks $shadowdir \{\} \
         \; >>& /dev/null


#
# make links directly to docs/www and docs/man
#
if (! -e $shadowdir/docs/man) then
        ln -s $petscdir/docs/man $shadowdir/docs/man
endif
if (! -e $shadowdir/docs/www) then
        ln -s $petscdir/docs/www $shadowdir/docs/www
endif

