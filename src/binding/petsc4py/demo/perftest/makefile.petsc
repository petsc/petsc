# -*- makefile -*-

EXECUTABLE=driver

.PHONY:all
all: ${EXECUTABLE}.exe

SOURCEC=${EXECUTABLE}.c
SOURCEF=App.f90

OBJSC=${SOURCEC:.c=.o}
OBJSF=${SOURCEF:.f90=.o}

${EXECUTABLE}.exe: ${SOURCEC} ${SOURCEF}
	${PETSC_FCOMPILE}
	${PETSC_COMPILE}
	${CLINKER} -o $@ ${OBJSC} ${OBJSF} ${PETSC_TS_LIB}
	${RM} ${OBJSC} ${OBJSF}

include ${PETSC_DIR}/lib/petsc/conf/variables
include ${PETSC_DIR}/lib/petsc/conf/rules

OBJSC=${SOURCEC:.c=.o}
OBJSF=${SOURCEF:.f90=.o}
