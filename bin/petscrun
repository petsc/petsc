#! /bin/sh
# $Id: petscrun,v 1.2 2000/11/07 04:48:45 bsmith Exp bsmith $ 
#
# Remote shells to a remote machine and runs a program
#
np=$1
shift
machine=$1
shift
arch=$1
shift
pdir=$1
shift
dir=$1
shift
echo "petscmpirun -np $np $*"
rsh $machine "cd $pdir/$dir ; setenv PETSC_DIR $pdir ; setenv PETSC_ARCH $arch; petscmpirun -np $np $* -error_output_stderr"

